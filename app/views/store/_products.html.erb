
<%@products.each do |product|%>
        <div class="col-lg-4">
          <%= link_to image_tag(product.image_url, :class => 'img-thumbnail'), store_show_path(product_id: product)%>
          <h4><%=product.title%></h4>
          <p><%=truncate(product.description, length: 120)%></p>
          <br>
          <strong>Price:&nbsp;<%= number_to_currency(product.price)%></strong>
          <br><br>
          <ul>
          <li><%=button_to 'Add to Cart', line_items_path(product_id: product), :class => "btn  btn-xs btn-success", remote: true%></li>
           <li><%=link_to 'View Detail', store_show_path(product_id: product, anchor: "detail"), :class => "btn btn-primary btn-xs"%></li>
           </ul>
        </div><!-- /.col-lg-4 -->

      <% end -%>
      <div class="col-lg-12 pull-right">
<%= will_paginate(@products)%>
</div>