<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">

 <%@products.each do |product|%>
            <div class="col-sm-3">
                            <div class="col-item">
                                <div class="photo">
                                    <%= link_to image_tag(product.image_url, :class => 'img-thumbnail'), store_show_path(product_id: product)%>
                                </div>
                                <div class="info">
                                    <div class="row">
                                        <div class="price col-md-6">
                                            <h5>
                                                <%=product.title%></h5>
                                            <h5 class="price-text-color">
                                                <%= number_to_currency(product.price)%></h5>
                                        </div>
                                        <div class="rating hidden-sm col-md-6">
                                          <% if @cart.purchased_at !=nil %>
                                             <% if @cart.line_items.exists?(:product_id => product.id)%>
                                        &nbsp;&nbsp;&nbsp; <%=link_to 'Download', product.pdf.url, :class => "btn btn-default btn-xs"%>
                                            <%end%>
                                           <%end%>
                                        </div>
                                    </div>
                                    <div class="separator clear-left">
                                        <p class="btn-add"><i class="fa fa-shopping-cart"></i><br><%=link_to 'Add to cart',line_items_path(product_id: product), method: :post, remote: true%>
                                 </p>
                                        <p class="btn-details">
                                            <i class="fa fa-list"></i><br><%=link_to 'More detail', store_show_path(product_id: product, anchor: "detail")%></p>
                                    </div>
                                    <div class="clearfix">
                                    </div>
                                </div>
                            </div>
                </div>
                                <% end %>
      <div class="col-lg-12 pull-right">
<%= will_paginate(@products)%>
</div>