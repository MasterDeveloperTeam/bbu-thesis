    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :status, :class => "form-control", readonly: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit :class => "btn btn-primary" %>
