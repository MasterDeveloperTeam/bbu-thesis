<div class="container">
<div class="form-signin">
<h2 class="form-signin-header">Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Email Address" %>
  <%= f.password_field :password,  :class => "form-control", :placeholder => "Password"%>
  <%= f.password_field :password_confirmation,  :class => "form-control", :placeholder => "Password confirmation"%>

  <div><%= f.submit "Sign up", :class => "btn btn-primary btn-lg btn-block" %></div>
<% end %>
<br>
<%= render "devise/shared/links" %>
</div>
</div>